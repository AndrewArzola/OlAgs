<p id="notice"><%= notice %></p>

<h1>Members</h1>

<%= render 'members/search_form.html.erb' %>

<table>
  <thead>
    <tr>
      <%= sort_link(@q, :fname) %>
      <%= sort_link(@q, :lname) %>
      <%= sort_link(@q, :joinDate) %>
      <%= sort_link(@q, :gradDate) %>
      <%= sort_link(@q, :email) %>
      <%= sort_link(@q, :phoneNumber) %>
      <%= sort_link(@q, :city) %>
      <%= sort_link(@q, :admin) %>
      <%= sort_link(@q, :major) %>
      <%= sort_link(@q, :active) %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.fname %></td>
        <td><%= member.lname %></td>
        <td><%= member.joinDate %></td>
        <td><%= member.gradDate %></td>
        <td><%= member.email %></td>
        <td><%= member.phoneNumber %></td>
        <td><%= member.city %></td>
        <td><%= member.admin %></td>
        <td><%= member.major %></td>
        <td><%= member.active %></td>
        <td><%= link_to 'Show', member %></td>
        <td><%= link_to 'Edit', edit_member_path(member) %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Member', new_member_path %>
