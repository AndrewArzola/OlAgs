    <%= form.label :event_id %>
    <%=collection_select( :due, :event_id, Event.all, :id, :name) %>
  </div>

  <div class="field">
    <%= form.label :dueAmount %>
    <%= form.number_field :dueAmount %>
  </div>

  <div class="field">
    <%= form.label :paid %>
