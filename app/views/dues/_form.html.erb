<%= form_with(model: due) do |form| %>
  <% if due.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(due.errors.count, "error") %> prohibited this due from being saved:</h2>

      <ul>
        <% due.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <Label class="form-label">Member</label>
    <% options = options_from_collection_for_select(@members, 'id', 'fname') %>
    <%= form.select :member_id,  options, class:"form-control" %>
  </div>

  <div class="field form-group">
    <Label class="form-label">Event</label>
    <% options = options_from_collection_for_select(@events, 'id', 'name') %>
    <%= form.select :event_id,  options %>
  </div>

  <div class="field form-group">
    <Label class="form-label">Amount</label>
    <%= form.number_field :dueAmount, class:"form-control" %>
  </div>

  <div class="field form-group">
    <Label class="form-label">Paid</label>
    <%= form.check_box :paid %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
